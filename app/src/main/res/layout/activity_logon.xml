<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    tools:context=".activity.LogonActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:hint="用户名"
        app:met_iconLeft="@drawable/username"
        app:met_iconPadding="0dp"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="用户名"
        app:met_singleLineEllipsis="true"
        app:met_minCharacters="5"
        app:met_maxCharacters="20"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/et_password"
        android:hint="密码"
        android:inputType="textWebPassword"
        app:met_iconLeft="@drawable/password"
        app:met_iconPadding="0dp"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="密码"
        app:met_singleLineEllipsis="true"
        app:met_minCharacters="6"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_logon"
        android:text="注册"
        />

</LinearLayout>